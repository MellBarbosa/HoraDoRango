<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projeto.horadorango">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_rango"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UsuarioActivity" />
        <activity android:name=".EnderecoActivity" />
        <activity android:name=".SplashActivity" />
        <activity android:name=".Adapter.EmpresaAdapter" />
        <activity android:name=".Adapter.EnderecoAdapter" />
        <activity android:name=".Adapter.ProdutoAdapter" />
        <activity android:name=".ListaEnderecosActivity" />
        <activity android:name=".LoginActivity"></activity>
    </application>

</manifest>