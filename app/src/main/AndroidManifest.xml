<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projeto.horadorango">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".HoraDoRangoApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_rango"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".ListaEnderecosActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EnderecoActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".FinalizaPedidoActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CarrinhoActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PedidoActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ListaPedidosActivity" />
        <activity android:name=".adapter.PedidosAdapter"></activity>
    </application>

</manifest>